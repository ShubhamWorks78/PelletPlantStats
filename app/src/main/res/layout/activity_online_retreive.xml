<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Online Retrieval"
            android:textSize="25dp"
            android:id="@+id/titleLabel"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="vertical"
    >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/dateLabel"
                android:layout_marginLeft="15dp"
                android:gravity="center_horizontal"/>
            <EditText
                android:id="@+id/ret_Day"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#ffe095"
                android:hint="dd"
                android:maxLength="2"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginLeft="30dp"
            />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="#000000"
                android:layout_marginLeft="3dp">
            </LinearLayout>
            <EditText
                android:id="@+id/ret_Month"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#ffe095"
                android:hint="mm"
                android:maxLength="2"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginLeft="3dp"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="#000000"
                android:layout_marginLeft="3dp">
            </LinearLayout>
            <EditText
                android:id="@+id/ret_Year"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="#ffe095"
                android:hint="yyyy"
                android:inputType="number"
                android:maxLength="4"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">
    </LinearLayout>

    <TextView
        android:id="@+id/text_coal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=""
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
    />

    <TextView
        android:id="@+id/text_lime"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=""
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
    />
    <TextView
        android:id="@+id/text_haem"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=""
        android:visibility="gone"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
    />
    <TextView
        android:id="@+id/text_mang"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=""
        android:visibility="gone"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Btn_Show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show"
            android:textAllCaps="false"
            android:layout_marginLeft="30dp"
        />
        <Button
            android:id="@+id/Btn_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textAllCaps="false"
            android:layout_marginLeft="23dp"
        />
        <Button
            android:id="@+id/Btn_Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textAllCaps="false"
            android:layout_marginLeft="23dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Offline"
            android:textAllCaps="false"
            android:visibility="gone"
            android:id="@+id/Btn_Save_Local"/>
    </LinearLayout>
</LinearLayout>